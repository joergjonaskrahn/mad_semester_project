<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5pt"
    android:visibility="visible"
    tools:context="org.dailydone.mobile.android.TodoOverviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small"
        android:gravity="end">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButtonDebug"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="@dimen/small"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/debug"
                android:backgroundTint="@color/gray_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">
            <ImageButton
                android:id="@+id/imageButtonAddTodo"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="@dimen/small"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_add_white_24dp" />

            <ImageButton
                android:id="@+id/imageButtonSelectSortMethod"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/sort_white" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todoOverviewRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />
</LinearLayout>
