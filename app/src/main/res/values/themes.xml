<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme for the App -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/gray_3</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/gray_3</item>
        <item name="android:colorBackground">@color/gray_3</item>
        <item name="android:colorForeground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_4</item>

        <!-- Button Colors -->
        <item name="android:colorButtonNormal">@color/purple</item>

        <!-- Other colors -->
        <item name="android:navigationBarColor">@color/gray_3</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>