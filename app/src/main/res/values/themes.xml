<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme for the App -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">#121212</item> <!-- Dark gray for the primary color -->
        <item name="colorPrimaryDark">#000000</item> <!-- Black for the status bar -->
        <item name="colorAccent">#BB86FC</item> <!-- Purple for buttons or icons -->

        <!-- Background Colors -->
        <item name="android:windowBackground">#121212</item>
        <item name="android:colorBackground">#121212</item>
        <item name="android:colorForeground">#FFFFFF</item> <!-- White for contrast text -->

        <!-- Text Colors -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- White text for primary elements -->
        <item name="android:textColorSecondary">#B3B3B3</item> <!-- Gray text for secondary elements -->

        <!-- Additional Colors -->
        <item name="android:navigationBarColor">#121212</item> <!-- Color for the bottom navigation bar -->
        <item name="android:statusBarColor">#000000</item> <!-- Black for the status bar -->

        <!-- Button Colors -->
        <item name="android:colorButtonNormal">@color/button_background_selector</item> <!-- Background color selector for buttons -->

        <!-- Material Components Themes -->
        <item name="materialCalendarTheme">@style/CustomCalendarTheme</item>
        <item name="materialTimePickerTheme">@style/DarkMaterialTimePicker</item>
    </style>
</resources>
