<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--> Text Styles <-->
    <style name="TextNormal">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextBold" parent="TextNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBigBold" parent="TextBold">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextHeading" parent="TextNormal">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextImportant">
        <item name="android:textColor">@color/decent_red</item>
    </style>

    <!-- Dark Date Picker Dialog -->
    <style name="DarkDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/gray_3</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_4</item>
    </style>

    <style name="DarkSpinnerTimePicker" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:timePickerStyle">@style/DarkSpinnerTimePickerStyle</item>
        <item name="android:buttonBarButtonStyle">@style/PurpleDialogButton</item>
    </style>

    <style name="DarkSpinnerTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:headerBackground">@color/gray_5</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersBackgroundColor">@color/black</item>
    </style>

    <style name="PurpleDialogButton">
        <item name="android:textColor">@color/purple</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
